<!-- header to be used on every page -->

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  </nav>
  <br>
  <% if (username !== undefined) { %>
  <form action="/logout" method="POST">
    <label style="font-weight: bold; font-size: 20px; margin-left: 15px; margin-right: 5px;">Logged in as <i><%= username %></i></label>
    <button type="submit">Logout</button>
  </form>
  <% } else { %>
    <div>
      <form action="/login" method="POST">
        <label style="margin-left: 15px;" for="username">Username:</label>
        <input style="padding-left: 5px" type="text" name="username" id="username" placeholder="john_doe">
        <button type="submit">Login</button>
      </form>
    </div>
  <% } %>
</header>